{
  "manifest_version": 3,
  "name": "Copy Slug",
  "version": "1.0",
  "description": "Adds a context menu option to copy the slug of a URL.",
  "permissions": ["contextMenus", "activeTab", "scripting"],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
}
